<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:title="Application Settings">

        <ListPreference
            android:defaultValue="Default Theme"
            android:dialogTitle="Choose Theme"
            android:entries="@array/themes"
            android:entryValues="@array/themes"
            android:key="@string/theme_preference"
            android:title="App Theme"/>

        <com.achanr.glovercolorapp.ui.views.GCPowerLevelPreference
            android:dialogTitle="Configure Power Levels"
            android:key="@string/power_level_preference"
            android:title="Brightness Levels"/>

        <ListPreference
            android:defaultValue="@string/NO_CHIP"
            android:dialogTitle="Choose Default Chip"
            android:entries="@array/all_chips"
            android:entryValues="@array/all_chips"
            android:key="@string/default_chip_preference"
            android:title="Default Preset Chip"/>

        <Preference
            android:clickable="true"
            android:key="@string/reset_dialog_preference"
            android:title="Reset Hidden Dialogs"
            android:summary="Show all previously hidden dialogs"/>

    </PreferenceCategory>

    <PreferenceCategory
        android:title="About">

        <Preference
            android:clickable="true"
            android:defaultValue="0.0"
            android:key="@string/version_number_preference"
            android:title="Version"/>

        <Preference
            android:clickable="true"
            android:key="@string/acknowledgements_preference"
            android:title="Acknowledgements"
            android:summary="Kudos and thanks to all third parties"/>

        <Preference
            android:clickable="true"
            android:key="@string/rate_app_preference"
            android:title="Rate App"
            android:summary="Give or update your rating on the Play Store"/>

        <Preference
            android:clickable="true"
            android:key="@string/follow_facebook_preference"
            android:title="Follow on Facebook"
            android:summary="Stay up to date with the latest developments"/>

        <Preference
            android:clickable="true"
            android:key="@string/opt_in_beta_preference"
            android:title="Beta Opt-in"
            android:summary="Join the open beta and be the first to test new features"/>

        <Preference
            android:clickable="true"
            android:key="@string/report_bugs_preference"
            android:title="Report Bugs or Send Feedback"
            android:summary="Help make the app better by reporting bugs and giving feedback"/>

        <Preference
            android:clickable="true"
            android:key="@string/donate_preference"
            android:title="Donate"
            android:summary="This app is completely free. If you like it, please consider donating to show your support."/>

    </PreferenceCategory>

</PreferenceScreen>