<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:title="Application Settings">

        <ListPreference
            android:key="THEME_PREFERENCE"
            android:title="Theme"
            android:entries="@array/themes"
            android:entryValues="@array/themes"
            android:dialogTitle="Choose Theme"
            android:defaultValue="Default Theme"/>

    </PreferenceCategory>

    <PreferenceCategory
        android:title="About">

        <Preference
            android:key="VERSION_NUMBER_PREFERENCE"
            android:title="Version"
            android:clickable="false"
            android:defaultValue="0.0"/>

    </PreferenceCategory>

</PreferenceScreen>