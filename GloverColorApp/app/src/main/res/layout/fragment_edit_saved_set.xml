<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <TextView
            style="@style/BodyText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title"/>

        <EditText
            android:id="@+id/edit_text_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter a name for your set"
            android:maxLines="1"
            android:singleLine="true"
            android:ellipsize="end"
            android:inputType="text"
            android:textSize="22sp"/>

        <TextView
            style="@style/BodyText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="Colors"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/color_1_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/EditSavedSetColorText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Color 1: "/>

                <Spinner
                    android:id="@+id/edit_text_color_1"
                    style="@style/EditSavedSetColorText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/color_4_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/EditSavedSetColorText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Color 4: "/>

                <Spinner
                    android:id="@+id/edit_text_color_4"
                    style="@style/EditSavedSetColorText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/color_2_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/EditSavedSetColorText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Color 2: "/>

                <Spinner
                    android:id="@+id/edit_text_color_2"
                    style="@style/EditSavedSetColorText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/color_5_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/EditSavedSetColorText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Color 5: "/>

                <Spinner
                    android:id="@+id/edit_text_color_5"
                    style="@style/EditSavedSetColorText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/color_3_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/EditSavedSetColorText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Color 3: "/>

                <Spinner
                    android:id="@+id/edit_text_color_3"
                    style="@style/EditSavedSetColorText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/color_6_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/EditSavedSetColorText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Color 6: "/>

                <Spinner
                    android:id="@+id/edit_text_color_6"
                    style="@style/EditSavedSetColorText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </LinearLayout>

        <TextView
            style="@style/BodyText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="Mode"/>

        <LinearLayout
            android:id="@+id/mode_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                style="@style/EditSavedSetColorText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mode: "/>

            <Spinner
                android:id="@+id/edit_text_mode"
                style="@style/EditSavedSetColorText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </LinearLayout>
</ScrollView>