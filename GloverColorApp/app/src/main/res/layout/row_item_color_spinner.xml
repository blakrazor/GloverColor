<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/edit_set_color_height"
    android:layout_marginTop="4dp"
    android:baselineAligned="false"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/color_1_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textview_color_1"
            style="@style/EditSavedSetColorText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""/>

        <com.achanr.glovercolorapp.ui.views.GCCustomSpinner
            android:id="@+id/spinner_color_1"
            style="@style/EditSavedSetColorSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/color_2_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textview_color_2"
            style="@style/EditSavedSetColorText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""/>

        <com.achanr.glovercolorapp.ui.views.GCCustomSpinner
            android:id="@+id/spinner_color_2"
            style="@style/EditSavedSetColorSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</LinearLayout>