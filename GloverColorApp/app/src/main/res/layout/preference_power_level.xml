<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="High"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1"
        android:gravity="center_vertical">

        <SeekBar
            android:id="@+id/seek_bar_high"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:max="10"
            android:progress="0"
            android:layout_weight="0.7"/>

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="0.1"/>

        <RelativeLayout
            android:id="@+id/color_swatch_high"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="0.2"
            android:background="@android:color/black">

            <TextView
                android:id="@+id/color_swatch_high_textview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:alpha="0.5"
                android:gravity="center"
                android:text="0"
                android:textColor="@android:color/white"
                android:textSize="24sp"/>

        </RelativeLayout>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Medium"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1"
        android:gravity="center_vertical">

        <SeekBar
            android:id="@+id/seek_bar_medium"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:max="10"
            android:progress="0"
            android:layout_weight="0.7"/>

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="0.1"/>

        <RelativeLayout
            android:id="@+id/color_swatch_medium"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="0.2"
            android:background="@android:color/black">

            <TextView
                android:id="@+id/color_swatch_medium_textview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:alpha="0.5"
                android:gravity="center"
                android:text="0"
                android:textColor="@android:color/white"
                android:textSize="24sp"/>

        </RelativeLayout>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Low"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1"
        android:gravity="center_vertical">

        <SeekBar
            android:id="@+id/seek_bar_low"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:max="10"
            android:progress="0"
            android:layout_weight="0.7"/>

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="0.1"/>

        <RelativeLayout
            android:id="@+id/color_swatch_low"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="0.2"
            android:background="@android:color/black">

            <TextView
                android:id="@+id/color_swatch_low_textview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:alpha="0.5"
                android:gravity="center"
                android:text="0"
                android:textColor="@android:color/white"
                android:textSize="24sp"/>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>